<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TutorialFirstFour"
    android:background="@drawable/image_background_step_four_first_access">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_refuse_last_step_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refuse_transparent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_last_step_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_see_you_later"
        android:textAppearance="@style/Exo2_Semibold_Button_Text"
        android:textColor="@color/pattern_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_refuse_last_step_tutorial" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_subtitle_last_step_tutorial"
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="@string/text_see_you_later"
        android:textColor="@color/pattern_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_last_step_tutorial" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nav_showcase_last_page"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintEnd_toEndOf="@+id/text_subtitle_last_step_tutorial"
        app:layout_constraintStart_toStartOf="@+id/text_subtitle_last_step_tutorial"
        app:layout_constraintTop_toBottomOf="@+id/text_subtitle_last_step_tutorial" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_go_to_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_continue_filled"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_back_to_step_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_continue_to_back_transparent"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>